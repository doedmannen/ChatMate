<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="client.clientApp.controllers.StartupWindowController"
          prefHeight="400.0" prefWidth="600.0" vgap="10" hgap="10"
          alignment="TOP_CENTER">

    <Label GridPane.rowIndex="0" GridPane.columnIndex="0"
           fx:id="errorLabel" GridPane.columnSpan="2"
           style="-fx-text-fill: red" textAlignment="CENTER">
        <GridPane.margin>
            <Insets top="10"/>
        </GridPane.margin>
    </Label>
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Label text="Your nickname: "/>
        <TextField fx:id="nicknameTextField"/>
    </VBox>
    <VBox GridPane.rowIndex="1" GridPane.columnIndex="1">

        <Label text="Server Adress: "/>
        <TextField fx:id="serverAdressTextField"/>
    </VBox>

    <Button text="Connect" GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#connectBtnPressed"/>

</GridPane>
